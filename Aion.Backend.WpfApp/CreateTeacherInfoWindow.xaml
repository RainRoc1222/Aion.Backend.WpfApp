<Window x:Class="Aion.Backend.WpfApp.CreateTeacherInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aion.Backend.WpfApp"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"/>
            </Style>
            <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Margin" Value="15,0"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="2" Rows="3">
            <WrapPanel>
                <TextBlock Text="上課日期 :" VerticalAlignment="Bottom" Margin="50,0,10,5"/>
                <DatePicker Margin="15,0" SelectedDate="{Binding SelectedDate}" FontSize="20" Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
            </WrapPanel>
            <WrapPanel  Margin="0,15,0,0">
                <TextBlock Text="課堂 : "  VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Lessons}" SelectedItem="{Binding SelectedLesson}"/>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="老師 : " Margin="50,0"/>
                <TextBlock Text="{Binding Teacher.Name}"/>
            </WrapPanel>
            <WrapPanel   >
                <TextBlock Text="舞風 : " Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Teacher.Style}" Width="200"/>
            </WrapPanel>
            <WrapPanel >
                <TextBlock Text="學生 : " VerticalAlignment="Bottom" Margin="50,0,0,5"/>
                <ComboBox ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="{Binding FirstName}" FontSize="20"/>
                                <TextBlock Text="{Binding LastName}"  FontSize="20"/>
                            </WrapPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </WrapPanel>
            <WrapPanel >
                <TextBlock Text="分級 : " VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Level}" IsEnabled="False" Width="100" Margin="15,0" FontSize="20"/>
            </WrapPanel>
        </UniformGrid>
        <WrapPanel Grid.Row="5" HorizontalAlignment="Center">
            <Button Content="確定" Click="Check" Width="100" Margin="15"/>
            <Button Content="取消" Click="Cancel" Width="100" Margin="15"/>
        </WrapPanel>
    </Grid>
</Window>
